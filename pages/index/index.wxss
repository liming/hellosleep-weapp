/**index.wxss**/

.main-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  width: 100%;
  flex: 0 0 300rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  background-color: dimgrey;
  font-size: 10pt;
  color: white;
}

.user-report {
  width: 100%;
  flex: 1 1 auto;

  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;

  font-size: 16pt;

}

.user-info-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.evaluate {
  width: 100%;
}

