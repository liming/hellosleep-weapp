<!--pages/submit/submit.wxml-->
<view class="container">
<scroll-view class="main-box">
<view class="we-cells weui-cells_after-title">
  <view class="weui-cell" wx:for="{{questions}}" wx:key="id">
    <view class="weui-cell_bd">{{item.text}}</view>
    <view class="weui-cell_ft">{{answers[item.name]}}</view>
  </view>
</view>
</scroll-view>
<view class="bottom-box">
<button bype="primary" bindtap="onSubmit">чбошод</button>
</view>
</view>