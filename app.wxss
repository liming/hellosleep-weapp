/**app.wxss**/
@import 'libs/weui/style/weui.wxss';
@import 'libs/weui/style/widget/weui-animate/weui-animate.wxss';

page{
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  /* font-size: 28rpx; */
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.container {
  width: 100%;
  height: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.main-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 0 1 100%;
}

.bottom-box {
  display: flex;
  width: 100%;
  flex: 1 0 auto;
}

.actions {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  padding: 30rpx;
  margin: auto;
  width: 90%;
}

.action-btn {
  width: 90%;
}
